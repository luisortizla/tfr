<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@drawable/gradientbg"
        >
		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/title"
			android:fontFamily="@font/atmaadd"
			android:textColor="@android:color/white"
			android:gravity="center"
			android:textSize="80sp"
        />
	</LinearLayout>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		
		android:background="@drawable/loginback">
		<EditText
			android:id="@+id/userlogintxt"
			android:inputType="textPersonName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			
			android:layout_marginTop="60dp"
			android:layout_marginBottom="30dp"
			android:layout_marginHorizontal="30dp"
			android:background="@drawable/loginandregisterbtn"
			android:textColorHint="@android:color/black"
			android:hint="@string/userlogin"
			android:textColor="@android:color/black"
			android:textSize="40sp"
			android:textAlignment="center"
        />
		<EditText
			android:id="@+id/passlogintxt"
			android:inputType="textPassword"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/userlogintxt"
			android:layout_marginBottom="60dp"
			android:layout_marginHorizontal="30dp"
			android:background="@drawable/loginandregisterbtn"
			android:hint="@string/passlogin"
			android:textColorHint="@android:color/black"
			android:textColor="@android:color/black"
			android:textSize="40sp"
			android:textAlignment="center"
        />
		<Button
			android:id="@+id/loginbtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/passlogintxt"
			android:background="@drawable/loginbutton"
			android:layout_marginTop="20dp"
			android:layout_marginBottom="80dp"
			android:layout_marginHorizontal="80dp"
			android:layout_alignParentTop="@id/registerbtn"
			android:text="@string/loginboton"
			android:textColor="@android:color/white"
			android:textSize="40sp"
        />

		<Button
			android:id="@+id/registerbtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:background="@drawable/registerbutton"
			android:text="@string/registerboton"
			android:textColor="@android:color/white"
			android:textSize="30sp"
        />
	</RelativeLayout>

</LinearLayout>
