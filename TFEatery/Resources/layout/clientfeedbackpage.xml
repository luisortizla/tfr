<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback"
    >


    <TextView
        android:id="@+id/namerestfbtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="40sp"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />

    <ImageView
        android:id="@+id/logoimage1"
        android:contentDescription="@string/logorest"
         android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_weight="2"
        />
    <TextView
        android:id="@+id/descriptiontv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        />

    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/abre"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
            android:textAlignment="center"
        android:layout_weight="2"
        android:gravity="center_vertical"
            />
    <TextView
        android:id="@+id/habretv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
        android:textColor="@android:color/black"
            android:textAlignment="center"
        android:layout_weight="2"
        android:gravity="center_vertical"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cierre"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
            android:textAlignment="center"
        android:layout_weight="2"
        android:gravity="center_vertical"
            />
    <TextView
        android:id="@+id/hcierratv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
        android:textColor="@android:color/black"
            android:textAlignment="center"
        android:layout_weight="2"
        android:gravity="center_vertical"
            />
    <Button
        android:id="@+id/ubicacion"
        android:background="@color/bluecolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tuubicacion"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/clientfeedbackupdatebtn"
        android:background="@drawable/registerbutton"
        android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/update"
        android:textColor="@android:color/white"
        android:textSize="25sp"/>
    
</LinearLayout>
