<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_600">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/ingresemoslosproductos"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="30sp"/>
    <EditText
        android:id="@+id/nameproductocreadotxt"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="@string/productonombre"/>
<Spinner
        android:id="@+id/productotipodecomidaspn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_weight="2"/>
    <EditText
        android:id="@+id/productodescpcioncreaciontxt"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="@string/productodescripcion"/>
    <EditText
        android:id="@+id/precioproductotxt"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="@string/precio"/>
    <EditText
        android:id="@+id/timpoentregatxt"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="@string/tiempoentrega"/>
    <EditText
        android:id="@+id/descuentocreatetxt"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="@string/descuento"/>
    <ImageView
        android:id="@+id/productoimagencreacion"
        android:contentDescription="@string/title"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"/>
    <Button
        android:id="@+id/fotoproductobtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/insertar"/>
    <Button
        android:id="@+id/creacionproductofinalizarbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/finish"/>
</LinearLayout>
