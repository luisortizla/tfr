<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginback">

    <TextView
        android:id="@+id/nameresttv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/atmaadd"
    android:textSize="30sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:background="@drawable/gradienthome"
        />

    <Button
        android:id="@+id/clientinfobtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="30dp"
        android:background="@drawable/loginbutton"
        android:text="@string/inforest"
        android:textColor="@android:color/white"
        android:fontFamily="@font/atmabold"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/productsbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="30dp"
        android:background="@drawable/loginbutton"
        android:text="@string/productos"
        android:textColor="@android:color/white"
        android:fontFamily="@font/atmabold"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/pedidosinfobtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="30dp"
        android:background="@drawable/loginbutton"
        android:text="@string/pedidos"
        android:textColor="@android:color/white"
        android:fontFamily="@font/atmabold"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/cuentasinfobtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="30dp"
        android:background="@drawable/loginbutton"
        android:text="@string/cuentas"
        android:textColor="@android:color/white"
        android:fontFamily="@font/atmabold"
        android:textSize="25sp"
        />

</LinearLayout>
